<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.second.Activities.VentaActivity">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/productImage"
        android:layout_width="144dp"
        android:layout_height="178dp"
        fresco:placeholderImage="@mipmap/ic_launcher"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pName"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        fresco:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pDes"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/pName"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:text="Stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pStock"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/pDes"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pPrice"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/pStock"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pId"
        android:layout_marginStart="16dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        fresco:layout_constraintTop_toBottomOf="@+id/pPrice"
        android:layout_marginEnd="16dp"
        fresco:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonComprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        fresco:layout_constraintLeft_toRightOf="@+id/cantidadEditText"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        fresco:layout_constraintRight_toRightOf="parent"
        fresco:layout_constraintTop_toTopOf="@+id/cantidadEditText"
        android:layout_marginTop="0dp"
        fresco:layout_constraintHorizontal_bias="0.512" />

    <EditText
        android:id="@+id/cantidadEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="number"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toBottomOf="@+id/pId" />

</android.support.constraint.ConstraintLayout>
